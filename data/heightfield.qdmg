//
// A sample scene using a heightfield
//

GlobalSettings {
	frameWidth              800
	frameHeight             600
	ambientLight            (0.25, 0.25, 0.25)
	wantAA                  true
	wantAdaptiveAA          true
	aaThreshold             0.1
	wantProgressiveDisplay  true
    progressiveDisplayDelay 100
    useSRGB                 false
    showAA                  false
    aaDebugColor            (1, 0, 0)
}

Light {
    pos                 (6000, 2000, -30)
    intensity           50000000
}

